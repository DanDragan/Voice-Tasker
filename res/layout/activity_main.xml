<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bShowLists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bNewList"
        android:layout_centerHorizontal="true"
        android:onClick="slistclicked"
        android:text="@string/show_lists" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bShowLists"
        android:layout_centerHorizontal="true"
        android:onClick="exitclicked"
        android:text="@string/exit" />

    <Button
        android:id="@+id/bNewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bShowLists"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:onClick="newlclicked"
        android:text="@string/new_list" />

</RelativeLayout>