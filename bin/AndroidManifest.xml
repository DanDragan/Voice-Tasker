<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ncit.android.voicetasker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ncit.android.voicetasker.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="ncit.android.voicetasker.Activity_Voice"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity 
            android:name="ncit.android.voicetasker.Activity_Show"
            android:screenOrientation="portrait">
        </activity>
        
        <activity 
            android:name="ncit.android.voicetasker.Activity_List"
            android:screenOrientation="portrait">            
        </activity>
        
        <activity 
            android:name="ncit.android.voicetasker.Activity_Shopping"
            android:screenOrientation="portrait">            
        </activity>
        
        <activity 
            android:name="ncit.android.voicetasker.Activity_ListDir"
            android:screenOrientation="portrait">            
        </activity>
        
    </application>

</manifest>
